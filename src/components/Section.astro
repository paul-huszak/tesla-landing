---
const { color, title, subtitle, price, sup } = Astro.props;
const textColor = `text-${color}`;
---

<section
  class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
  data-header-color={color}
>
  <div class="z-30 relative h-full flex flex-col">
    <header>
      <h2 class={`${textColor} pt-[7.5rem] text-[40px] font-medium`}>
        {title}
      </h2>
      <h3 class={`${textColor} text-2xl`}>
        {price}
      </h3>
      <p class={`${textColor} text-sm`}>
        {subtitle}<sup>{sup}</sup>
      </p>
    </header>

    <footer class="flex flex-col flex-grow justify-end pb-20">
      <slot name="footer" />
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 w-full h-full z-10">
    <slot name="background" />
  </div>
</section>
